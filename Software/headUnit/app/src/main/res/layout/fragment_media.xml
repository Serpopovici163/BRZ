<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MediaFragment"
    android:padding="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="5"
        android:orientation="vertical">

        <!-- album cover and song name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:weightSum="5"
            android:background="@drawable/rounded_background"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/album_cover_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.7"
                android:scaleType="fitCenter"
                android:padding="25dp"/>

            <!-- song details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/song_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textSize="30dp"/>

                <TextView
                    android:id="@+id/artist_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:textSize="20dp"/>


            </LinearLayout>

        </LinearLayout>

        <!-- song progress bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="horizontal"
            android:weightSum="8"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/song_time_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"/>

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:id="@+id/song_progress_bar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:max="100" />

            <TextView
                android:id="@+id/song_length_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"/>

        </LinearLayout>

        <!-- media buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.7"
            android:weightSum="5"
            android:orientation="horizontal"
            android:padding="50dp">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:id="@+id/skip_back_button"
                android:scaleType="fitCenter"
                android:background="@null"
                android:src="@drawable/backward_skip_button_img"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/play_pause_button"
                android:scaleType="fitCenter"
                android:background="@null"
                android:src="@drawable/play_button_img"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:id="@+id/skip_forward_button"
                android:scaleType="fitCenter"
                android:background="@null"
                android:src="@drawable/forward_skip_button_img"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>