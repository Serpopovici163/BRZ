<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MediaFragment"
    android:padding="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="5"
        android:orientation="vertical">

        <!-- album cover and song name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:weightSum="5">



        </LinearLayout>

        <!-- media buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:weightSum="5"
            android:orientation="horizontal"
            android:padding="50dp">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:id="@+id/skip_back_button"
                android:scaleType="fitCenter"
                android:background="@null"
                android:src="@drawable/backward_skip_button_img"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/play_pause_button"
                android:scaleType="fitCenter"
                android:background="@null"
                android:src="@drawable/play_button_img"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:id="@+id/skip_forward_button"
                android:scaleType="fitCenter"
                android:background="@null"
                android:src="@drawable/forward_skip_button_img"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>