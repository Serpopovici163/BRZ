<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrafficAdvisorFragment"
    android:orientation="vertical"
    android:weightSum="5"
    android:padding="15dp"
    android:layout_marginStart="15dp"
    android:background="@drawable/rounded_background">

    <!-- encompasses light status icons and car diagram -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:weightSum="4">

        <!-- icons on left of car diagram -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="3"
            android:layout_margin="15dp">

            <ImageView
                android:id="@+id/legal_status_imageview"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/handcuff_icon"
                android:layout_margin="10dp"/>

            <ImageView
                android:id="@+id/horn_status_imageview"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/horn_icon"
                android:layout_margin="10dp"/>

            <ImageView
                android:id="@+id/siren_status_imageview"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/siren_icon"
                android:layout_margin="20dp"/>

        </LinearLayout>

        <!-- TODO: build car diagram here -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical"
            android:weightSum="5">

            <!-- icons above vehicle -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"/>

            <!-- vehicle itself -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="horizontal"
                android:weightSum="5">

                <!-- bars to left of vehicle -->

                <!-- vehicle -->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:src="@drawable/car_outline"/>

                <!-- bars to right of vehicle -->

            </LinearLayout>

            <!-- bars below vehicle -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"/>

        </LinearLayout>

    </LinearLayout>

    <!-- icons below vehicle -->

    <!-- 2x2 table containing brief descriptions of all countermeasure states -->
    <!-- padding is awkward here since bottom and right side of container already contains padding technically -->
    <!-- TODO: get icons for countermeasure states -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:weightSum="2">

        <!-- TODO: change textviews to buttons -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2">

            <Button
                android:id="@+id/fast_police_cycle_state_textview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="28sp"
                android:text="@string/fast_police_title"
                android:background="@drawable/rounded_background"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/slow_police_cycle_state_textview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="28sp"
                android:text="@string/slow_police_title"
                android:background="@drawable/rounded_background"/>

        </LinearLayout>

        <Space
            android:layout_width="15dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2">

            <Button
                android:id="@+id/fast_hazard_cycle_state_textview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="28sp"
                android:text="@string/fast_hazard_title"
                android:background="@drawable/rounded_background"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/slow_hazard_cycle_state_textview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="28sp"
                android:text="@string/slow_hazard_title"
                android:background="@drawable/rounded_background"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>