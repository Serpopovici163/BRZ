<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".CenterConsole.CenterConsoleDiagnosticFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="9.5"
        android:orientation="vertical">

        <!-- car diagnostic thingies -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_background"
            android:gravity="center"
            android:text="@string/primary_systems_title"
            android:textSize="24sp" />

        <!-- car row one (maintenance, stability) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="20">

            <!-- maintenance icon -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="11"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                android:padding="5dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/maintenance_textview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_background"
                        android:gravity="center"
                        android:text="@string/maintenance"
                        android:textSize="36sp" />

                    <ImageView
                        android:id="@+id/maintenance_highlight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/highlight_outline"
                        android:visibility="invisible" />

                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- stability icon -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                android:padding="5dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/stability_textview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_background"
                        android:gravity="center"
                        android:text="@string/stability"
                        android:textSize="36sp" />

                    <ImageView
                        android:id="@+id/stability_highlight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/highlight_outline"
                        android:visibility="invisible" />

                </FrameLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- car row two (engine, fuel, power) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="15">

            <!-- engine icon -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                android:padding="5dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/engine_textview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_background"
                        android:gravity="center"
                        android:text="@string/engine"
                        android:textSize="36sp" />

                    <ImageView
                        android:id="@+id/engine_highlight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/highlight_outline"
                        android:visibility="invisible" />

                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- fuel icon -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                android:padding="5dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/fuel_textview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_background"
                        android:gravity="center"
                        android:text="@string/fuel"
                        android:textSize="36sp" />

                    <ImageView
                        android:id="@+id/fuel_highlight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/highlight_outline"
                        android:visibility="invisible" />

                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- power icon -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                android:padding="5dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/main_power_textview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_background"
                        android:gravity="center"
                        android:text="@string/power"
                        android:textSize="36sp" />

                    <ImageView
                        android:id="@+id/main_power_highlight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/highlight_outline"
                        android:visibility="invisible" />

                </FrameLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- car row three (safety, canbus, lighting) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="20">

            <!-- canbus icon -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                android:padding="5dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/canbus_textview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_background"
                        android:gravity="center"
                        android:text="@string/canbus"
                        android:textSize="36sp" />

                    <ImageView
                        android:id="@+id/canbus_highlight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/highlight_outline"
                        android:visibility="invisible" />

                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- lighting icon -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                android:padding="5dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/lighting_textview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_background"
                        android:gravity="center"
                        android:text="@string/lighting"
                        android:textSize="36sp" />

                    <ImageView
                        android:id="@+id/lighting_highlight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/highlight_outline"
                        android:visibility="invisible" />

                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- safety icon -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                android:padding="5dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/safety_textview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_background"
                        android:gravity="center"
                        android:text="@string/safety"
                        android:textSize="36sp" />

                    <ImageView
                        android:id="@+id/safety_highlight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/highlight_outline"
                        android:visibility="invisible" />

                </FrameLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- auxiliary diagnostic thingies -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_background"
            android:gravity="center"
            android:text="@string/secondary_systems_title"
            android:textSize="24sp" />

        <!-- auxiliary row one (network, vision, sensor) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="19">

            <!-- network icon -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                android:padding="5dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/network_textview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_background"
                        android:gravity="center"
                        android:text="@string/network"
                        android:textSize="36sp" />

                    <ImageView
                        android:id="@+id/network_highlight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/highlight_outline"
                        android:visibility="invisible" />

                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- vision icon -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                android:padding="5dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/vision_textview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_background"
                        android:gravity="center"
                        android:text="@string/vision"
                        android:textSize="36sp" />

                    <ImageView
                        android:id="@+id/vision_highlight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/highlight_outline"
                        android:visibility="invisible" />

                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- sensor icon -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                android:padding="5dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/sensor_textview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_background"
                        android:gravity="center"
                        android:text="@string/sensor"
                        android:textSize="36sp" />

                    <ImageView
                        android:id="@+id/sensor_highlight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/highlight_outline"
                        android:visibility="invisible" />

                </FrameLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- auxiliary row two (serial, defence, compute) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="19">

            <!-- aux power icon -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                android:padding="5dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/aux_power_textview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_background"
                        android:gravity="center"
                        android:text="@string/power"
                        android:textSize="36sp" />

                    <ImageView
                        android:id="@+id/aux_power_highlight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/highlight_outline"
                        android:visibility="invisible" />

                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- defence icon -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                android:padding="5dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/defence_textview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_background"
                        android:gravity="center"
                        android:text="@string/defence"
                        android:textSize="36sp" />

                    <ImageView
                        android:id="@+id/defence_highlight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/highlight_outline"
                        android:visibility="invisible" />

                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- compute icon -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                android:padding="5dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/compute_textview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_background"
                        android:gravity="center"
                        android:text="@string/compute"
                        android:textSize="36sp" />

                    <ImageView
                        android:id="@+id/compute_highlight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/highlight_outline"
                        android:visibility="invisible" />

                </FrameLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- auxiliary row three (bluetooth, internet) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="17">

            <!-- bluetooth icon -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                android:padding="5dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/bluetooth_textview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_background"
                        android:gravity="center"
                        android:text="@string/bluetooth"
                        android:textSize="36sp" />

                    <ImageView
                        android:id="@+id/bluetooth_highlight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/highlight_outline"
                        android:visibility="invisible" />

                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- internet icon -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                android:padding="5dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/internet_textview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_background"
                        android:gravity="center"
                        android:text="@string/internet"
                        android:textSize="36sp" />

                    <ImageView
                        android:id="@+id/internet_highlight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/highlight_outline"
                        android:visibility="invisible" />

                </FrameLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- message dialog -->
        <TextView
            android:id="@+id/message_dialog"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:layout_margin="5dp"
            android:gravity="center"
            android:background="@drawable/rounded_background"
            android:text="@string/diagnostic_message_blank"
            android:textSize="26sp" />

    </LinearLayout>

</LinearLayout>