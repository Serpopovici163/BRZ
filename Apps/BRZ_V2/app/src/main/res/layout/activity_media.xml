<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<FrameLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/ThemeOverlay.BRZ_V2.FullscreenContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/fullscreenBackgroundColor"
    tools:context=".MediaActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <!-- linear layout is necessary for item spacing -->
    <LinearLayout
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:padding="15dp"
        android:descendantFocusability="blocksDescendants">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            app:cardCornerRadius="10dp">

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/big_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_background"/>

        </androidx.cardview.widget.CardView>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/small_fragment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingStart="5dp" />

    </LinearLayout>

    <!-- relative layout is used to place this above the previous linear layout
    this fragment is used to display blind spot cameras which are overlayed on
    top of other data during lane changes-->

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/overlay_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- the following members are for showing which fragment container is selected when changing fragments -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:padding="15dp">

        <ImageView
            android:id="@+id/big_fragment_highlight_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/highlight_outline"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/small_fragment_highlight_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="5dp"
            android:src="@drawable/highlight_outline"
            android:visibility="invisible"/>

    </LinearLayout>
</FrameLayout>
</layout>