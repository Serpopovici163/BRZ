<resources xmlns:tools="http://schemas.android.com/tools">
<!-- Base application theme. -->
<style name="Theme.BRZ_V2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/day_theme_window</item>
    <item name="colorPrimaryVariant">@color/day_theme_background</item>
    <item name="colorOnPrimary">@color/day_theme_highlight</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/day_theme_window</item>
    <item name="colorSecondaryVariant">@color/day_theme_background</item>
    <item name="colorOnSecondary">@color/day_theme_text</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->
</style>

<style name="Theme.BRZ_V2.Fullscreen" parent="Theme.BRZ_V2">
    <item name="android:actionBarStyle">@style/Widget.Theme.BRZ_V2.ActionBar.Fullscreen</item>
    <item name="android:windowActionBarOverlay">true</item>
    <item name="android:windowBackground">@null</item>
</style>

<style name="ThemeOverlay.BRZ_V2.FullscreenContainer" parent="">
    <item name="fullscreenBackgroundColor">@color/day_theme_background</item>
    <item name="fullscreenTextColor">@color/day_theme_text</item>
</style>

<style name="Theme.BRZ_V2.TransponderContainer" parent="">
    <item name="colorPrimary">@color/day_theme_window</item>
    <item name="colorAccent">@color/day_theme_text</item>
</style>
</resources>